<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="100dp">

	<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
													   android:layout_height="match_parent"
	>


		<TextView android:layout_height="wrap_content"
				  android:layout_width="wrap_content"
				  android:text="name" app:layout_constraintTop_toTopOf="parent"
				  android:layout_marginTop="32dp"
				  android:id="@+id/item_name" app:layout_constraintStart_toEndOf="@+id/imageView"
				  android:layout_marginStart="8dp"/>
		<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Apellido"
				app:layout_constraintTop_toBottomOf="@+id/item_name"
				android:layout_marginTop="8dp" android:layout_marginStart="8dp"
				app:layout_constraintStart_toEndOf="@+id/imageView" android:id="@+id/item_lastname"/>
		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" app:srcCompat="@drawable/avatar"
				app:layout_constraintBottom_toBottomOf="parent"
				android:id="@+id/imageView" android:layout_marginBottom="16dp"
				app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
				app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>


	</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
